<Page x:Class="TableTopCrucible.Domain.Library.WPF.Pages.DevTestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:viewModels="clr-namespace:TableTopCrucible.Domain.Library.WPF.PageViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      d:DataContext="{d:DesignInstance Type=viewModels:DevTestPageViewModel}"
      Title="{Binding Title}">

    <Page.Resources>
        <ResourceDictionary Source="../Common.xaml"/>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MaxWidth="600"/>
            <ColumnDefinition/>
            <ColumnDefinition/>            
        </Grid.ColumnDefinitions>
        
        <ContentPresenter Content="{Binding NotificationCenter}"
                          Grid.Row="0" 
                          Grid.RowSpan="2"
                          Grid.Column="0"/>

        <TextBlock Text="{Binding Vfiles.Count}"
                   HorizontalAlignment="Right"
                   Grid.Row="0"
                   Grid.Column="1"/>
        <ListView ItemsSource="{Binding Vfiles}" 
                  Grid.Row="0"
                  Grid.Column="1"/>
        <TextBlock Text="{Binding Items.Count}"
                   HorizontalAlignment="Right"
                   Grid.Row="1"
                   Grid.Column="1"/>
        <ListView ItemsSource="{Binding Items}"
                  Grid.Row="1"
                  Grid.Column="1">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock>Item</TextBlock>
                        <TextBlock Text="{Binding Name}"/>
                        <ListView ItemsSource="{Binding Files}">
                            
                        </ListView>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>
</Page>
