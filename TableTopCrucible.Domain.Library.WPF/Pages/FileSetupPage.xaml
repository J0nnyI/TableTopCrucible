<Page x:Class="TableTopCrucible.Domain.Library.WPF.Pages.FileSetupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="{Binding Title}"
      xmlns:viewModels="clr-namespace:TableTopCrucible.Domain.Library.WPF.PageViewModels"
      d:DataContext="{d:DesignInstance IsDesignTimeCreatable=False, Type={x:Type viewModels:FileSetupPageViewModel}}">
    <Page.Resources>
        <ResourceDictionary Source="../Common.xaml"/>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MaxWidth="600"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ContentPresenter Content="{Binding NotificationCenter}"
                          Grid.Column="0"
                          Grid.Row="0"
                          Grid.RowSpan="2"/>
        <ContentPresenter Content="{Binding DirList}"
                          Grid.Column="1"
                          Grid.Row="0"/>
        <ContentPresenter Content="{Binding FileList}"
                          Grid.Column="1"
                          Grid.Row="1"/>
        <ContentPresenter Content="{Binding ItemList}"
                          Grid.Column="2"
                          Grid.Row="0"
                          Grid.RowSpan="2"/>
        <StackPanel VerticalAlignment="Bottom"
                    Grid.Row="1"
                    HorizontalAlignment="Left">
            <Button Command="{Binding OpenFile}"
                    Style="{StaticResource MaterialDesignToolButton}"
                    HorizontalAlignment="Left">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Datei Laden"/>
                    <md:PackIcon Kind="FileDownload"/>
                </StackPanel>
            </Button>
            <Button Command="{Binding SaveFile}"
                    Style="{StaticResource MaterialDesignToolButton}"
                    HorizontalAlignment="Left">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Datei Speichern"/>
                    <md:PackIcon Kind="ContentSave"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Page>
