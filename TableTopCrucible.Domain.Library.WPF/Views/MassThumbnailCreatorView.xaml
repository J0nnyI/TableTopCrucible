<UserControl x:Class="TableTopCrucible.Domain.Library.WPF.Views.MassThumbnailCreatorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TableTopCrucible.Domain.Library.WPF.Views"
             xmlns:hx="http://helix-toolkit.org/wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <hx:HelixViewport3D>
            <hx:DefaultLights/>

            <ModelVisual3D Content="{Binding ViewportContent}"/>
        </hx:HelixViewport3D>
    </Grid>
</UserControl>
