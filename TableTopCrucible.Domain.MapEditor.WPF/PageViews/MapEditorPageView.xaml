<Page x:Class="TableTopCrucible.Domain.MapEditor.WPF.PageViews.MapEditorPageView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TableTopCrucible.Domain.MapEditor.WPF.PageViews"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MapEditorPageView"      >

    <DockPanel>
        <Grid DockPanel.Dock="Left" 
              Width="500px">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <ContentPresenter Content="{Binding TagFilter}"
                              Validation.ErrorTemplate="{x:Null}"
                              Grid.Row="0"/>
            <ContentPresenter Content="{Binding ItemList}" 
                              Grid.Row="1"/>
        </Grid>
        <Label Content="{Binding CacheFileCount}"
               DockPanel.Dock="Top"/>
        <ContentPresenter Content="{Binding MapEditor}"/>
    </DockPanel>
</Page>
