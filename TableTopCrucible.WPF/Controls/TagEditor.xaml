<UserControl x:Class="TableTopCrucible.WPF.Controls.TagEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TableTopCrucible.WPF.Controls"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             x:Name="self"
             mc:Ignorable="d" 
             d:DesignHeight="450"
             d:DesignWidth="800">
    <ListBox ItemsSource="{Binding ElementName=self, Path=Tags}" 
             Style="{StaticResource MaterialDesignFilterChipListBox}">
        <ListBox.ItemContainerStyle>
            <Style TargetType="ListBoxItem"
                   BasedOn="{StaticResource MaterialDesignFilterChipListBoxItem}">
                <Setter Property="Focusable"
                        Value="False"/>
            </Style>
        </ListBox.ItemContainerStyle>
        
    </ListBox>
</UserControl>
