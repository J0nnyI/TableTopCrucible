<UserControl x:Class="TableTopCrucible.WPF.Controls.TagEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TableTopCrucible.WPF.Controls"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             x:Name="self"
             mc:Ignorable="d" 
             d:DesignHeight="450"
             d:DesignWidth="800"
             IsKeyboardFocusWithinChanged="self_IsKeyboardFocusWithinChanged"
             Loaded="TagEditor_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"
                                MaxWidth="{Binding ElementName=self, Path=Width, Converter={StaticResource cv_minMaxMod}, ConverterParameter=70%_70%_70%}"/>
            <ColumnDefinition Width="*"
                                MinWidth="200px"/>
        </Grid.ColumnDefinitions>
        <ListBox ItemsSource="{Binding ElementName=self, Path=Tags}" 
                    VerticalAlignment="Center"
                    Style="{StaticResource MaterialDesignFilterChipListBox}"
                    Grid.Column="0"
                    Grid.Row="0"
                    Grid.RowSpan="2">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem"
                        BasedOn="{StaticResource MaterialDesignFilterChipListBoxItem}">
                    <Setter Property="Focusable"
                            Value="False"/>
                </Style>
            </ListBox.ItemContainerStyle>

        </ListBox>

        <ListView ItemsSource="{Binding ElementName=self, Path=NewTagErrors}"
                    Grid.Column="1"
                    Grid.Row="0">
                
        </ListView>
            
        <ComboBox ItemsSource="{Binding ElementName=self, Path=Tags}"
                    IsEditable="True"
                    KeyDown="ComboBox_KeyDown"
                    SelectionChanged="onNewTag"
                    StaysOpenOnEdit="True"
                    Grid.Column="1"
                    Grid.Row="1">
            <ComboBox.Resources>
                <Style TargetType="Popup">
                    <Setter Property="Height" Value="300px"/>
                </Style>
            </ComboBox.Resources>
        </ComboBox>
    </Grid>
</UserControl>
